@model IEnumerable<ExamenFinal_Grupo08.Models.Ordenes>

@{
    ViewBag.Title = "Gestion de Ordenes";
}

<h2>Gestion de Ordenes</h2>

<p>
    @Html.ActionLink("Agregar nueva Orden", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Orden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Mesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Orden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Mesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Orden }) | |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Orden })
            </td>
        </tr>
    }

</table>
